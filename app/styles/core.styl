@import 'normalize.css'

colorPrimary = #c56183;

* {
  -webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
  -moz-box-sizing: border-box;    /* Firefox, other Gecko */
  box-sizing: border-box;         /* Opera/IE 8+ */
}

body {
  background: #eee;
  color: #222;
  font-size: 85%;
  line-height: 1.25;
/* Resets 1em to 12px */
  font-family: Verdana, Arial, Sans-Serif;
}

header {
  background: colorPrimary;
  //background-image: linear-gradient(#bf5877, #ca6e91);
  position: fixed;
  width: 100%;
  height: 49px;
  border-bottom: 1px solid #bf5877;
  line-height: 48px;
  padding: 0 10px;
  box-shadow: 0 0 10px #555;

  h1 {
    padding: 0;
    margin: 0;
    float: left;

    a {
      background: url(../images/logo_header.png) center center no-repeat;
      display: inline-block;
      width: 188px;
      height: 48px;
      text-indent: -200%;
    }
  }

  nav {
    margin: 0;
    padding: 0;

    ul {
      margin: 0;
      padding: 0;
      list-style-type: none;
      float:right;
      height: 48px;
      line-height: 48px;

      li {
        float: left;
        padding: 0;
        margin: 0 24px 0 0;

        a {
          color: #f4d1dd;
          text-decoration: none;
          text-shadow: 0 1px 0 #bf5877;
        }

        a:hover {
          color: #fff;
        }
      }

      li:last-child {
        margin-right: 0;
      }
    }
  }
}
